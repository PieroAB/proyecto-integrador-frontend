    <script>
        $(document).ready(function () {


            $('.btn-menu').click(function () {
                $('.contenedor-menu .menu').slideToggle(800);

            });

            /*document width debes restarle 16px al hacer la medida por el scrollbar*/

            $('.home').click(function () {
                if ($(document).width() < 751) {
                    if ($('.contenedor-menu .menu').css('display') == 'block') {
                        $('.contenedor-menu .menu').slideToggle(800);
                    };
                };
            });


            $(window).resize(function () {
                if ($(document).width() >= 751) {
                    $('.contenedor-menu .btn-menu').css({ 'display': 'none' });
                    $('.contenedor-menu .menu').css({ 'display': 'block' });
                }
                if ($(document).width() < 751) {
                    $('.contenedor-menu .btn-menu').css({ 'display': 'block' });
                    $('.contenedor-menu .menu').css({ 'display': 'none' });
                }
            });




        });




    </script>
