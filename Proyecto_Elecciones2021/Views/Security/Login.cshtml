@model Proyecto_Elecciones2021.Models.Logueo
@using CaptchaMvc.HtmlHelpers


<div class="login d-flex flex-column flex-md-row">


    <div class="login-i ">

        <h1 class="d-sm-none">Elecciones Generales 2021</h1>

        <div class="login-organizaciones flex-column flex-md-row ">
            <div>
                <img class="login-imagen-jne" src="~/Imagenes/logos/jne.png" alt="Jurado Nacional de Elecciones" />
            </div>
            <div class="login-div-medio">
                <img class="login-imagen-gob" src="~/Imagenes/logos/gob.png" alt="Gobierno del Perú" />
            </div>
            <div>
                <img class="login-imagen-onpe" src="~/Imagenes/logos/onpe.png" alt="Oficina Nacional de Procesos Electorales" />
            </div>
        </div>

        <img class="login-img-elecciones" src="~/Imagenes/logos/eleccion2021.png" alt="Elecciones Generales 2021" />
    </div>


    <div class="login-d">

        <div class=" login-header">


            <h1>Elecciones Generales 2021</h1>
            <p>
                Ciudadanos y ciudadanas, sean todos bienvenidos a
                nuestra renovada web en donde podrán realizar sus votaciones. Aseguramos la completa seguridad y confidencialidad de sus votos.
            </p>
        </div>


        <div class="login-formulario">
            @using (Html.BeginForm("Login", "Security", null, FormMethod.Post, htmlAttributes: new { @enctype = "multipart/form-data", @id = "fromCaptcha" }))
            {


                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="col-md-12 form-group">
                    <span>Introduzca su DNI</span>
                    @Html.EditorFor(model => model.dni, new { htmlAttributes = new { @class = "form-control div-centrar" } })
                    @Html.ValidationMessageFor(model => model.dni, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12 form-group">
                    <span>Fecha de Nacimiento</span>
                    @Html.EditorFor(model => model.fechaNacimiento, new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                    @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12 pb-1">
                    <span>Fecha de Emisión</span>
                    @Html.EditorFor(model => model.fechaEmision, new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                    @Html.ValidationMessageFor(model => model.fechaEmision, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-12 mostrar">
                    <a href="#">¿Dónde está la fecha de emisión?</a>
                </div>

                <div class="col-md-12 tool">
                    <p class="tooltiptext texto">La Fecha de emisión se ubica en la parte frontal de su DNI.</p>
                    <img class="dni tooltiptext" src="~/Imagenes/logos/dni-fechaemi.png" alt="DNI" />
                </div>

                <div class="col-12 form-group captcha">

                    @Html.Captcha(refreshText: "Pruebe otro", inputText: "Ingrese captcha", length: 5)
                    <div class="text-danger login-mensaje">@ViewBag.ErrorMessage</div>
                </div>
                <div class="login-mensaje text-danger">
                    @ViewBag.Message
                </div>

                <div class="col-md-12 form-group d-flex justify-content-center ">
                    <input type="submit" value="Ingresar" class="btn btn-verde col-xs-10 col-md-8" />
                </div>

            }

        </div>
    </div>
</div>



